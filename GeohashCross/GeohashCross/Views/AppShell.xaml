    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:local="clr-namespace:GeohashCross"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GeohashCross.Views"
    Visual="Material"
    BackgroundColor="#3F51B5"
    FlyoutBackgroundColor="Red"
    x:Class="GeohashCross.Views.AppShell">
    <TabBar
        Shell.TitleColor="White"
        Shell.TabBarBackgroundColor="White"
        Shell.TabBarTitleColor="{StaticResource Primary}"
        >
        <Tab
            Title="Home">
            <ShellContent Shell.TitleColor="White">
                <views:HomePage/>
            </ShellContent>
            <Tab.Icon>
                <FontImageSource
                    Glyph="{x:StaticResource home}"
                    FontFamily="{StaticResource MaterialDesignIcons}"
                    Size="{StaticResource TabIconSize}" />
            </Tab.Icon>
        </Tab>
