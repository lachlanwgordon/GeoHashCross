                <Button
                    Text="Run Now"
                    Command="{Binding RunNowCommand}" />
                <Button 
                    Text="Notify"
                    Command="{Binding NotifyCommand}"
                    />
            </StackLayout>
        </ScrollView>-->
    </ContentPage.Content>
</ContentPage>