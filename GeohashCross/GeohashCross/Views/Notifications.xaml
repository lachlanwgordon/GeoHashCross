<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:GeohashCross.ViewModels"
    Padding="100"
    x:Class="GeohashCross.Views.Notifications">
    <ContentPage.BindingContext>
        <vm:NotificationsViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
                HorizontalOptions="EndAndExpand">
                <!--<Label Text="Lat1"/>
            <Entry/>
            <Label Text="Lon1"/>
            <Entry/>
            <Label Text="Lat2"/>
            <Entry/>
            <Label Text="Lon2"/>
            <Entry/>-->
                <Label
                    Text="{Binding Log}"
                    LineBreakMode="WordWrap" />
                <Button
                    Text="Subscribe"
                    Command="{Binding SubscribeCommand}" />
                <Button
                    Text="Run Now"
                    Command="{Binding RunNowCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>