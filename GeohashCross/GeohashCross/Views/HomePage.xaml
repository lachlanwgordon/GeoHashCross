                                Grid.ColumnSpan="3"
                                Grid.Row="8" />
                            <Label
                                Text="{Binding Bearing, StringFormat='Bearing: {0}'}"
                                Grid.Row="9"
                                Grid.ColumnSpan="3" />
                            <Label
                                Text="{Binding TargetNeedleDirection, StringFormat='TargNeedDir: {0}'}"
                                Grid.Row="9"
                                Grid.ColumnSpan="3" />
                        </StackLayout>
                    </ScrollView>-->
                    <Button
                        Text="☽"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Grid.Row="4"
                        HeightRequest="60"
                        WidthRequest="60"
                        VerticalOptions="End"
                        HorizontalOptions="End"
                        Command="{Binding DarkNavCommand}"
                        FontSize="{StaticResource Large}"
                        TextColor="{StaticResource Icons}"
                        BorderRadius="29"
                        BackgroundColor="{StaticResource Accent}" />
                </Grid>
            </Frame>
            <Button
                IsVisible="{Binding DarkNavEnabled, Converter={StaticResource NotBool}}"
                Text="☽"
                Grid.Column="1"
                Grid.Row="2"
                Command="{Binding DarkNavCommand}"
                FontSize="{StaticResource Large}"
                TextColor="{StaticResource Icons}"
                BorderRadius="29"
                BackgroundColor="{StaticResource Accent}" />
            <Button
                IsVisible="{Binding DarkNavEnabled, Converter={StaticResource NotBool}}"
                Grid.Column="2"
                Grid.Row="2"
                Text="🛰"
                Clicked="SatteliteClicked"
                FontSize="{StaticResource Large}"
                TextColor="{StaticResource Icons}"
                BorderRadius="29"
                BackgroundColor="{StaticResource Accent}" />
        </Grid>
    </ContentPage.Content>
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:LocationSummary
                x:Key="locationSummary" />
            <local:NotBoolConverter
                x:Key="NotBool" />
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>