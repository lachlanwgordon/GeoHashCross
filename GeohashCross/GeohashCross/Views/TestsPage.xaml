<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tests"
    x:Class="GeohashCross.Views.TestsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Geohash Tests" />
            <Label Text="Start Lat"/>
            <Entry  x:Name="StartLat"/>
            <Label Text="Start Lon"/>
            <Entry  x:Name="StartLong"/>
            <Button Text="Use Current" Clicked="UseCurrent"/>
            <Label Text="End Lat"/>
            <Entry  x:Name="EndLat"/>
            <Label Text="End Lon"/>
            <Entry  x:Name="EndLon"/>
            <Button Text="Use true North Pole" Clicked="UseNorthPole"/>   
            <Button Text="Calculate" Clicked="Calculate"/>
            <Label Text="Bearing"/>
            <Label x:Name="Bearing"/>
            <Label Text="Log: " x:Name="Log"/>
            <Button Text="Crash" Clicked="CrashClicked"/>
            <Button Text="Error" Clicked="ErrorClicked"/>
            
        </StackLayout>
          
    </ContentPage.Content>
</ContentPage>
